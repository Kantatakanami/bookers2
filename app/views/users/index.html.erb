<div class="container">
  <div class="row">

    <div class="col-md-3">
      <%= render 'users/user_info', user: @user_info %>
       </br>
      <%= render 'books/books_new', book: @book_new %>
    </div>

    <div class="col-md-8 offset-md-1">
      <h2>Users</h2>
      <table class="table table-hover table-inverse^">
        <thead>
          <tr>
            <th><strong>Image</strong></th>
            <th><strong>name</strong></th>
            <th><strong></strong></th>
          </tr>
        </thead>
        </br>
        <tbody>
        <% @users.each do |user| %>
        <tr>
          <td><%= attachment_image_tag user, :profile_image, :fill, 40, 40, fallback: "no_image.jpg"%></td>
          <td><%= user.name %></td>
          <td><%= link_to "Show",user_path(user.id) %></td>
        </tr>
        <% end %>
        </tbody>
      </table>
    </div>

  </div>
</div>

